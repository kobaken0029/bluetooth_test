<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.koba.bluetoothtest.fragments.DeviceListFragment">

    <TextView
        android:id="@+id/paired_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="接続履歴ありデバイス一覧"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/paired_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paired_list_title"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/non_paired_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paired_device_list"
        android:text="接続履歴なしデバイス一覧"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/non_paired_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/non_paired_list_title" />

</RelativeLayout>
